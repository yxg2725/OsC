<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">


        <ImageView

            android:id="@+id/find_recent_event_iv_icon"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/find_recent_event_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hhahahhahahhahahah"
                android:textColor="#0b0b0b" />

            <TextView
                android:id="@+id/find_recent_event_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2015-09-01 12:00:00" />

            <TextView
                android:id="@+id/find_recent_event_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hhahahhahahhahahah" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
