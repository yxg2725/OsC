<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/green"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/tanyitan_backbutton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/titlebar_back">

        <ImageView
            style="@style/ImageButton"
            android:background="@drawable/actionbar_back_icon_normal"/>
    </RelativeLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:paddingLeft="0dp"
        android:text="弹一弹"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/tanyitan_send"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/titlebar_back"
        >
    <ImageView
        android:id="@+id/tanyitan_sendbutton1"
        style="@style/ImageButton"
        android:background="@drawable/actionbar_send_icon" />
    <ImageView
        android:id="@+id/tanyitan_sendbutton2"
        style="@style/ImageButton"
        android:background="@drawable/actionbar_unsend_icon"
        />
    </RelativeLayout>
</LinearLayout>