<resources>
    <!--动弹使用style：开始-->
    <style name="dongtan_lp_base_both_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dongtan_lp_base_w_wrap_h_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="dongtan_lp_base_w_match_h_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dongtan_lp_base_both_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--listview的item使用:开始-->
    <style name="item_dongtan_listview_addition_words" parent="dongtan_lp_base_both_wrap">
        <item name="android:textColor">@color/item_dongtan_listview_addition_word</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="item_dongtan_listview_addition_right_part_align" parent="item_dongtan_listview_addition_words">
        <item name="android:layout_alignBottom">@id/item_dongtan_listview_tv_commit_phone_type</item>
        <item name="android:layout_alignTop">@id/item_dongtan_listview_tv_commit_phone_type</item>
        <item name="android:text">@string/dongtan_praise_amount</item>
        <item name="android:drawablePadding">3dp</item>
    </style>
    <!--动弹：listview的item使用:结束-->

    <!--activity details使用：开始-->
    <style name="dongtan_portrait_right_part_base_lp" parent="dongtan_lp_base_both_wrap">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="dongtan_username_lp" parent="dongtan_portrait_right_part_base_lp">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#00f</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/item_dongtan_listview_username</item>
    </style>

    <style name="dongtan_gl_images_dimen">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:columnCount">3</item>
        <item name="android:rowCount">2</item>
    </style>

    <!--activity details使用：结束-->

    <!--动弹使用style：结束-->
</resources>
